<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_height="match_parent"
        tools:context=".FirstActivity">

    <Button
            android:text="Login"
            android:layout_margin="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" tools:layout_editor_absoluteY="145dp"
            tools:layout_editor_absoluteX="163dp" android:id="@+id/btnFirstLogin"/>
    <android.support.v4.view.ViewPager
            android:id="@+id/vp_img_main_product"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></android.support.v4.view.ViewPager>
  <android.support.design.widget.TabLayout
      android:id="@+id/tl_main_category"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      app:tabIndicatorColor="#FFB30f"

      />
    <android.support.v4.view.ViewPager
            android:id="@+id/vp_main_product"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></android.support.v4.view.ViewPager>
</LinearLayout>