<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
    android:gravity="center"
        tools:context=".SignupActivity">
    <LinearLayout android:layout_width="wrap_content"
                  android:layout_height="wrap_content"

                  android:gravity="center"
                    android:orientation="vertical"
        android:layout_margin="20dp">


    <EditText
            android:layout_margin="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="이름"
            android:ems="10"
            tools:layout_editor_absoluteY="287dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:id="@+id/edtSignupName"/>
        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:hint="아이디"
                android:ems="10"
                android:id="@+id/edtSignupID"/>
        <EditText
            android:layout_width="wrap_content"
            android:layout_margin="20dp"
            android:hint="패스워드"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"

            android:ems="10"
            tools:layout_editor_absoluteY="370dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:id="@+id/edtSignupPW"/>
    <Button
            android:text="회원가입"
            android:layout_margin="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" tools:layout_editor_absoluteY="441dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/btnSignup"/>
    </LinearLayout>
</RelativeLayout>