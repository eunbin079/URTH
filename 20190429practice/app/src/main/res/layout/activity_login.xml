<?xml version="1.0" encoding="utf-8"?>

        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".LoginActivity">
<LinearLayout
        android:layout_width="" android:layout_height=""   />

    <ImageView


            android:layout_width="wrap_content"
            android:layout_height="0dp" app:srcCompat="@drawable/SoptName"
            android:id="@+id/imageLogin"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="40dp" app:layout_constraintBottom_toBottomOf="@+id/TextLoginID"
            android:layout_marginBottom="36dp"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/TextLoginID"
            app:layout_constraintStart_toStartOf="@+id/textLoginPassword" android:layout_marginBottom="24dp"
            app:layout_constraintBottom_toTopOf="@+id/textLoginPassword"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textLoginPassword"
            android:layout_marginEnd="9dp"
            android:layout_marginBottom="21dp"
            app:layout_constraintEnd_toEndOf="@+id/btnLogin" app:layout_constraintBottom_toTopOf="@+id/btnLogin"/>
    <Button
            android:text="Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnLogin"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toEndOf="@+id/txtLoginInfo"
            app:layout_constraintEnd_toEndOf="@+id/txtLoginInfo" android:layout_marginBottom="296dp"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtLoginInfo"
            android:layout_marginTop="36dp"
            app:layout_constraintTop_toBottomOf="@+id/btnLogin" app:layout_constraintEnd_toStartOf="@+id/txtLoginSignup"
            android:layout_marginEnd="24dp"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtLoginSignup"
            app:layout_constraintBaseline_toBaselineOf="@+id/txtLoginInfo" android:layout_marginEnd="112dp"
            app:layout_constraintEnd_toEndOf="parent"/>
</LinearLayout>
</android.support.constraint.ConstraintLayout>