<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".LoginActivity">
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingHorizontal="40dp"
            android:paddingBottom="10dp"
            android:gravity="center" android:layout_alignParentStart="true" android:layout_alignParentTop="true"
            android:layout_marginTop="0dp" android:layout_marginStart="0dp">
        <ImageView
                android:layout_width="53dp"
                android:layout_height="55dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/my_zzi"
                android:scaleType="centerInside"
                android:id="@+id/imgLoginLogo"
                android:adjustViewBounds="true"
                android:layout_marginTop="100dp"/>
        <EditText
                android:layout_width="240dp"
                android:layout_height="40dp"
                android:inputType="textPersonName"
                android:ems="10"
                android:hint="ID"
                android:textColorHint="#CECECE"
                android:layout_marginTop="80dp"
                android:background="@drawable/gray_border"
                android:paddingLeft="15dp"


                android:id="@+id/edtLoginID"
        />
        <EditText
                android:layout_width="240dp"
                android:layout_height="40dp"
                android:inputType="textPassword"
                android:ems="10"
                android:hint="PW"
                android:textColorHint="#CECECE"
                android:background="@drawable/gray_border"
                android:paddingLeft="15dp"

                android:id="@+id/editLoginPW"
                android:layout_marginTop="15dp"/>
        <Button
                android:text="LOGIN"
                android:textSize="14dp"
                android:layout_width="240dp"
                android:layout_height="40dp"
                android:layout_marginTop="15dp"
                android:textColor="#FFFFFF"
                android:textStyle="bold"

                android:id="@+id/btnLoginSubmit"
        />
        <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="15dp">
        <TextView
                android:text="TO SIGN UP"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
               android:gravity="right"
                android:id="@+id/txtLoginInfo"
               android:textSize="11dp" />
        </RelativeLayout>
        <RelativeLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp">
            <TextView
                    android:textStyle="bold"
                    android:textColor="#707070"
                    android:text="signup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtLoginSignup"
                    android:textSize="11dp"
            />
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>