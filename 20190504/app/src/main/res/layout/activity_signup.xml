<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".SignupActivity">
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingHorizontal="40dp"
            android:paddingVertical="10dp"
            android:gravity="fill_vertical"

            android:layout_alignParentStart="true" android:layout_alignParentTop="true">

        <ImageView
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:srcCompat="@tools:sample/avatars"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="50dp"
                android:layout_alignParentTop="true"
                android:paddingVertical="20dp"
                android:id="@+id/imgSingup"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:paddingVertical="5dp"
                android:paddingHorizontal="15dp"
                android:inputType="textPersonName"
                android:hint="Name"
                android:textColorHint="@color/colorGray"
                android:background="@drawable/gray_border"
                android:ems="10"
                android:id="@+id/editSignupName"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_marginBottom="10dp"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:paddingVertical="5dp"
                android:paddingHorizontal="15dp"
                android:hint="ID"
                android:textColorHint="@color/colorGray"
                android:background="@drawable/gray_border"

                android:ems="10"
                android:id="@+id/editSignupID"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:layout_marginBottom="10dp"
                android:paddingVertical="5dp"
                android:paddingHorizontal="15dp"
                android:hint="PW"
                android:textColorHint="@color/colorGray"
                android:background="@drawable/gray_border"
                android:ems="10"
                android:id="@+id/editSignupPW"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="PW Check"
                android:layout_marginBottom="10dp"
                android:paddingVertical="5dp"
                android:paddingHorizontal="15dp"
                android:textColorHint="@color/colorGray"
                android:background="@drawable/gray_border"
                android:inputType="textPassword"
                android:ems="10"
                android:id="@+id/editSignupPWcheck"/>
        <Button
                android:text="SIGN UP"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/btnSignup"
                android:background="@drawable/primary_border_fill"/>
    </LinearLayout>

</RelativeLayout>